# http://editorconfig.org
root = true

[*]
indent_style = space
indent_size = 2

end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.{java,kt,kts,gradle,h,m,swift}]
indent_size = 4
max_line_length = 120

[{Makefile,*.go}]
indent_style = tab
indent_size = 4

[*.md]
trim_trailing_whitespace = false
